                };
            newLenhNhapKho.TagertVitri = temporaryLenhNK.TagertVitri;

            // Kiem tra cac dieu kien truoc khi insert DB

            // So luong con trong cua vi tri
            int slcontrong = newLenhNhapKho.TagertVitri.SLConTrong;
            // So luong nhap cua vi tri
            int soluongnhap = int.TryParse(newLenhNhapKho.LNKSoLuong.Value?.ToString(), out int sln) ? sln : 0;

            if (soluongnhap == 0)
            {
                await DialogService.Alert($"Số lượng nhập kho phải lớn hơn 0", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });
                return;
            }

            // Tong so luong can nhap kho
            int slallnhapkho = int.TryParse(SelectedNVLofPNK.NVLNKSoLuongAll.Value?.ToString(), out int slall) ? slall : 0;
            // Tinh tong so luong nhap kho sau moi lan tao lenh moi
            int slallnhapkhodatao = 0;
            foreach (var lnk in SelectedNVLofPNK.DSLenhNKs)
            {
                int lnkslnhap = int.TryParse(lnk.LNKSoLuong.Value?.ToString(), out int lnksln) ? lnksln : 0;
                slallnhapkhodatao += lnkslnhap;
            }

            // Kiem tra qua so luong can nhap kho
            if ((slallnhapkhodatao + soluongnhap) > slallnhapkho)
            {
                await DialogService.Alert($"Qúa số lượng cần nhập kho ({slallnhapkho})", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });
                return;
            }


            if (soluongnhap > slcontrong)
            {
                await DialogService.Alert($"Số lượng nhập kho ({soluongnhap}) quá số lượng trống của vị trí ({slcontrong})", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });
            }
            else
            {
                (int lenhnkId, string lnkError) = SQLServerServices.InsertLenhNhapKho(newLenhNhapKho);

                if (lenhnkId > 0)
                {
                    // Gan ID cua lenh nhap kho sau khi insert
                    newLenhNhapKho.LenhNKID.Value = lenhnkId;
                    // Add new lenh to DB
                    SelectedNVLofPNK.DSLenhNKs.Add(newLenhNhapKho);

                    int slcontrongsaunhap = slcontrong - soluongnhap; // tinh so luong con trong cua vi tri sau khi tao lenh

                    newLenhNhapKho.TagertVitri.SLConTrong = slcontrongsaunhap; // cap nhat so luong trong sau khi tao lenh

                    // True bit da chi dinh day du vi tri (so luong cua lenh truoc do + so luong cua lenh moi)
                    if ((slallnhapkhodatao + soluongnhap) == slallnhapkho)
                    {
                        SelectedNVLofPNK.IsAsignedVitri = true;
                    }

                    temporaryLenhNK = new(); isAddLocation = false;
                }
                else
                {
                    await DialogService.Alert($"Lỗi: {lnkError}", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });
                }

            }

        }
        else
        {
            await DialogService.Alert($"Đã chọn vị trí này trước đó", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });
        }
    }

