                        {
                            // gan neu da ton tai vi tri trong danh sach
                            viTriofNVL = vitri;

                            isNVLExisting = true; break;
                        }
                    }
                }

                int updateInsertVTofNVLstatus = -1; string updateInsertVTofNVLerror = string.Empty;

                if (isNVLExisting)
