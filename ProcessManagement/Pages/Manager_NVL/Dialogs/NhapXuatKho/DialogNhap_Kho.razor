                    // Insert vao bang VitriOfNVL
                    (updateInsertVTofNVLstatus, updateInsertVTofNVLerror) = SQLServerServices.InsertNewViTriOfNgVatLieu(viTriofNVL);
                }

                // Update lenh nhap kho status
                if (updateInsertVTofNVLstatus > 0)
                {
                    lenh.LNKIsDone.Value = 1;

                    // Update lenh nhap kho status
                    (int updatelnk, string updatelnkError) = SQLServerServices.UpdateLenhNhapKho(lenh);

