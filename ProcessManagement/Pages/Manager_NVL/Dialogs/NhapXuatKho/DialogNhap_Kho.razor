    private async Task QuetMaNhapKhoNguyenVatLieu(string? maPhieuNK, string? maNVL, string? maVitri)
    {
        if (String.IsNullOrEmpty(maPhieuNK) || String.IsNullOrEmpty(maNVL) || String.IsNullOrEmpty(maVitri)) return;

        // Get PNK infor
        PhieuNhapKho phieuNhapKho = SQLServerServices.GetPhieuNhapKhoByMaPhieu(maPhieuNK);

        NVLofPhieuNhapKho targetNVLofPNK = phieuNhapKho.DSNVLofPNKs.FirstOrDefault(item => item.TargetNgLieu.TenNVL.Value?.ToString() == maNVL.Trim()) ?? new();

        foreach (var lenh in targetNVLofPNK.DSLenhNKs)
        {
            int lenhstatus = int.TryParse(lenh.LNKIsDone.Value?.ToString(), out int status) ? status : 3;
            string mavitri = lenh.TagertVitri.MaViTri.Value?.ToString()?.Trim() ?? string.Empty;

            if (lenhstatus == 0 && mavitri == maVitri.Trim())
            {
                int soluongNhapthem = int.TryParse(lenh.LNKSoLuong.Value?.ToString(), out int slt) ? slt : 0;

                ViTriofNVL viTriofNVL = new()
                    {
                        VTID = { Value = lenh.TagertVitri.VTID.Value },
                        NVLID = { Value = targetNVLofPNK.TargetNgLieu.NVLID.Value },
                        VTNVLSoLuong = { Value = soluongNhapthem }
                    };

                // Kiem tra NVL da co o vi tri
                bool isNVLExisting = false;

                foreach (var vitri in targetNVLofPNK.TargetNgLieu.DSViTri)
                {
                    var vtid = vitri.VTID.Value;
                    var nvlid = vitri.NVLID.Value;

