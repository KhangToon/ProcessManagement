                                    HeaderCellRender="@(args => args.Attributes.Add("style", $"background-color: rgba(58, 71, 77)"))"
                                    CellRender="@OnCellRender" Value="@DatagridSelectedNVLofPXK" ValueChanged="@((args) => OnDatagridSelectChanged(args))">
