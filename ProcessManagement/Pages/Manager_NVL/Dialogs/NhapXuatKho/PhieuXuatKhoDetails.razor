                                                                        <RadzenText Text="@($"{SLnvlhiencoTaivitri.ToString()} ( {SelectedNVLofPXK.TargetNgLieu.DonViTinh.Value?.ToString()} )")" Style="color: darkgreen; font-weight: 600; font-size: 15px"></RadzenText>
