            }
            else
            {
                // Gan PXKID cho PXK
                PXK.PXKID.Value = newpxkID;
                // Khoi tao danh sach nguyen vat lieu xuat kho
                PXK.DSNVLofPXKs = new();

                foreach (var nvl in DSachNVL_XuatKho)
                {
                    NVLofPhieuXuatKho nvlpxk = new()
