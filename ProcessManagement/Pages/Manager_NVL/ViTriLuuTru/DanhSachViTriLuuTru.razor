                                                    || vitri.DSachViTriofNVL.Any(nvl => nvl.NgLieuInfor.MaNVL.Value?.ToString()?.IndexOf(keyWord.Trim(), StringComparison.OrdinalIgnoreCase) >= 0)).ToList();
