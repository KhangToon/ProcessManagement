    private async Task OnAddNewLotForViTriLuuTru(VitriLuuTru selectedViTri)
    {
        await Task.Run(() =>
        {
            var dsachLots = SQLServerServices.GetListViTriOfNgVatLieuByVTid(selectedViTri.VTID.Value);

            var listLotIndexs = dsachLots.Select(lot => int.Parse(lot.LotVitri.Value?.ToString()?.Replace("LOT", "") ?? "-1"));

            int maxIndex = (listLotIndexs.Count() > 0) ? listLotIndexs.Max() : 0;

            int newIndex = -1;

            for (int i = 1; i < maxIndex; i++)
            {
                if (!listLotIndexs.Contains(i))
                {
                    newIndex = i;
                    break;
                }
            }

            if (newIndex == -1)
            {
                newIndex = maxIndex + 1;
            }

            if (newIndex != -1)
            {
                ViTriofNVL newviTriofNVL = new()
                    {
                        VTID = { Value = selectedViTri.VTID.Value },
                        NVLID = { Value = 0 },
                        VTNVLSoLuong = { Value = 0 },
                        LotVitri = { Value = $"LOT{newIndex}" },
