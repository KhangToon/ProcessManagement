            foreach (var partthungtp in partofthungtps)
            {
                (int newpottpid, error) = SQLServerServices.InsertPartOfThungTPham(partthungtp);

                if (newpottpid <= 0)
                {
                    result = -1;

                    await PonUpNotification(result, $"{error}");

