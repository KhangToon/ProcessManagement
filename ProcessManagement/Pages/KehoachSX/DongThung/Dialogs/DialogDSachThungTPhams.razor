    private void OnUpdateThungTPToOddNumbered(ThungTPham thungTPham)
    {
        thungTPham.IsOddNumbered.Value = 1;
        (int rs, string error) = SQLServerServices.UpdateThungTPham(thungTPham);

        if (rs == 1)
        {
            foreach (var pottp in thungTPham.PartOfThungTPhams)
            {
                pottp.IsOddNumbered.Value = 1;
                pottp.RefPOTTPID.Value = DBNull.Value;
                pottp.IsHandledOddNumbered.Value = DBNull.Value;

                (int udrs, string er) = SQLServerServices.UpdatePartOfThungTPham(pottp);
            }

            StateHasChanged();
        }
    }

    private async Task OnDeleteThungTPham(ThungTPham thungTPham)
    {
        // Check this is last thungTP ishandled odd-numbered

        bool ishandled = thungTPham.PartOfThungTPhams.Any(pottp => Equals(pottp.IsHandledOddNumbered.Value, 1));

        if (ishandled)
        {
            await DialogService.Alert($"<b>Không thể xóa thùng đã được gộp với thùng khác!</b>", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", CloseDialogOnOverlayClick = true, ShowClose = false });
        }
        else
        {
            bool? confirm = await DialogService.Confirm($"<b>Xóa thùng thành phẩm này?</b>", "Xác nhận", new ConfirmOptions() { OkButtonText = "OK", CancelButtonText = "Hủy", Style = "color: red;", ShowClose = false });

            if (confirm.Value)
            {
                // Delete partofTTP
                foreach (var pottp in thungTPham.PartOfThungTPhams)
                {
                    if (!Equals(pottp.RefPOTTPID.Value, 0))
                    {
                        // Update RESET RefPOTTPID
                        SQLServerServices.UpdateIsHandleOddNumberedPOTTP(null, pottp.RefPOTTPID.Value);
                    }

                    // Delete
                    SQLServerServices.DeletePartOfThungTPham(pottp.POTTPID.Value);
                }

                // Delete ThungTP

                if (!Equals(thungTPham.RefTTPID.Value, 0))
                {
                    // Update RESET RefTTPID
                    SQLServerServices.UpdateIsHandleOddNumberedThungTP(null, thungTPham.RefTTPID.Value);
                }

                // Delete
                SQLServerServices.DeleteThungTP(thungTPham.TTPID.Value);
            }

            await LoadDSachThungTPhams(TargetKHSX.KHSXID.Value);

            // Reset delete TTP
            IsAllcreatedTTP = false;
        }
    }

