                                nvlmoicd.CaDem.NVLMCDID.Value = nvlmcdID;

                                (int cantoiID, string addcatoiError) = SQLServerServices.InsertNVLmoiCongdoanCalamviec(nvlmoicd.CaDem);
                            }

