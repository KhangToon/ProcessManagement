    // Tao danh sach LOT
    private async Task GenerateListLot()
    {
        waitgetlistlot = true;

        int result = -1; string error = "Không thể tạo danh sách lot nguyên vật liệu!";

        await Task.Run(() => { (result, error) = generLot.GenerateLotNVL(); });

