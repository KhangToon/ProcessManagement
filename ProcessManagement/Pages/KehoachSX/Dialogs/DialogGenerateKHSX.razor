    // Them congdoan/nguyencong san xuat
    private void OnAddCongdoan(string tenCD, bool isSelecteAll)
    {
        if (tenCD.Trim() == string.Empty) { return; }

        NguyenCongofKHSX? alreadyExitCD = generLot.NewKHSX.DSachCongDoans.FirstOrDefault(cd => cd.TenCongDoan.Value?.ToString() == tenCD);

        if (alreadyExitCD != null)
        {
            if (!isSelecteAll)
            {
                generLot.NewKHSX.DSachCongDoans.Remove(alreadyExitCD);
            }
        }
        else
        {
            NguyenCongofKHSX congDoan = new();
            congDoan.TenCongDoan.Value = tenCD;
            congDoan.IsUsing = true;

            generLot.NewKHSX.DSachCongDoans.Add(congDoan);
        }

        if (generLot.NewKHSX.DSachCongDoans.Count == 0)
        {
            isSelectAllCongdoan = false;
        }
    }

    // Luu ke hoach san xuat to Database
    private async Task SubmitKHSXtoDatabase()
    {
        if (generLot.ListNVLs == null || generLot.NewKHSX == null || generLot.NewKHSX.DSachCongDoans.Count == 0) { return; }

        isAddingLSXtodatabase = true;

        await Task.Run(async () =>
        {
            // Asign khsx properties
            generLot.AsignKHSXdata();

            // Add new KHSX to DB
            (int khsxID, string addkhsxError) = SQLServerServices.InsertNewKHSX(generLot.NewKHSX);

            if (khsxID > 0)
            {
                // Asign id for new KHSX
                generLot.NewKHSX.KHSXID.Value = khsxID;

                bool addNVLofKHSXok = true;

                // Asign KHSX id for NVLofKHSX List
                foreach (var nvl in generLot.NewKHSX.DSachNVLs)
                {
                    nvl.KHSXID.Value = khsxID;

                    // Insert NVL of KHSX
                    (int nvlkhsxid, string er) = SQLServerServices.InsertNVLofKHSX(nvl);

                    if (nvlkhsxid <= 0)
                    {
                        // Remove KHSX if error
                        await DeleteKehoachSanxuat();

                        await DialogService.Alert($"{er}", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });

                        addNVLofKHSXok = false;

                        break;
                    }
                    else
                    {
                        // Update SL NgVatLieu
                        //(int udrs, string uder) = SQLServerServices.UpdateSLTonkhoNguyenVatLieu_XuatKho(nvl.NVLID.Value, nvl.SoLuong.Value);

                        // if (udrs == -1)
                        // {
                        //     // Remove KHSX if error
                        //     await DeleteKehoachSanxuat();

                        //     await DialogService.Alert($"{uder}", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });

                        //     addNVLofKHSXok = false;

                        //     break;
                        // }

                        // Add History lay so luong NVL
                    }
                }

                if (!addNVLofKHSXok) { return; }

                // Add new Cong doan to DB
                foreach (var congdoan in generLot.NewKHSX.DSachCongDoans.Where(cd => cd.IsUsing == true).ToList())
                {
                    bool errorFlag = false;

                    congdoan.KHSXID.Value = khsxID;

                    congdoan.CreateDSachNVLCongDoans(generLot.ListNVLs);

                    // Insert Congdoan vao KHSX
                    (int cdID, string addcdError) = SQLServerServices.InsertCongdoantoKehoachSanxuat(congdoan);

                    if (cdID <= 0)
                    {
                        // Remove KHSX if error
                        await DeleteKehoachSanxuat();

                        await DialogService.Alert($"{addcdError}", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });

                        errorFlag = true; break;
                    }
                    else
                    {
                        // add nvl moi cong doan
                        foreach (var nvlmoicd in congdoan.DSachNVLCongDoans)
                        {
                            nvlmoicd.CDID.Value = cdID;

                            nvlmoicd.NgayXuat.Value = DateTime.Now;

