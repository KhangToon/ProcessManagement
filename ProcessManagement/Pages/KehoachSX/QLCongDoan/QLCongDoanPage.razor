        {
            if (isLoading == false)
            {
                isLoading = true;

                List<KHSX_LOT> dsLots = new();

                Dictionary<string, object?> parameters = new Dictionary<string, object?>() { { KHSX_LOT.DBName.KHSXID, khsxid } };
