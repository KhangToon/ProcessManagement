    private async Task InsertThungTPifNotExisting(object? khsxid)
    {
        var partOfthungTPhams = SQLServerServices.GetListPartOfThungTPs(new Dictionary<string, object?>() { { KHSX_LOT.DBName.KHSXID, khsxid } }).thungTPhams;

        // Insert ThungTP if it not exsit
        if (partOfthungTPhams.Any())
        {
            var listgroupttp = partOfthungTPhams.Where(ttp => ttp.IDThung.Value != null)
                                                    .GroupBy(ttp => ttp.IDThung.Value).ToList();

            foreach (var partofthungtps in listgroupttp)
            {
                var firstPartofThungTP = partofthungtps.FirstOrDefault();

                if (firstPartofThungTP != null)
                {
                    var lastTTPwithsameMQL = SQLServerServices.GetListThungTPs(new() { { ThungTPham.DBName.MaQuanLyThung, firstPartofThungTP.MaQuanLyThung.Value } }, false).thungTPhams.FirstOrDefault() ?? new();

                    if (lastTTPwithsameMQL.TTPID.Value == null)
                    {
                        // If not have --> Insert

                        ThungTPham thungTPham = new()
                            {
                                KHSXID = { Value = firstPartofThungTP.KHSXID.Value },
                                SoLuong = { Value = partofthungtps.Sum(item => int.TryParse(item.SoLuong.Value?.ToString(), out int sl) ? sl : 0) },
                                IDThung = { Value = firstPartofThungTP.IDThung.Value },
                                SPID = { Value = firstPartofThungTP.SPID.Value },
                                NgayDongThung = { Value = firstPartofThungTP.NgayDongThung.Value },
                                MaQuanLyThung = { Value = firstPartofThungTP.MaQuanLyThung.Value }
                            };

                        (int newttpID, string error) = SQLServerServices.InsertThungTPham(thungTPham);
                    }

                    // Update one mqlThung per IDThung of PartOfThungTP
                    if (partofthungtps.Count() > 1)
                    {
                        foreach (var partofttp in partofthungtps)
                        {
                            if (partofttp.MaQuanLyThung.Value?.ToString()?.Trim() != firstPartofThungTP.MaQuanLyThung.Value?.ToString()?.Trim())
                            {
                                partofttp.MaQuanLyThung.Value = firstPartofThungTP.MaQuanLyThung.Value;

                                SQLServerServices.UpdatePartOfThungTPham(partofttp);
                            }
                        }
                    }
                }
            }
        }

        await Task.Delay(1);
    }

