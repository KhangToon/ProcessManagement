    // Add new thong tin nhan vien
    private async Task OnOpenDialogAddNewNVDetail()
    {
        List<LoaiThongTinNhanVien> loaiThongTinNVs = await DialogService.OpenAsync<DialogAddNewThongTinNhanVien>(null, new Dictionary<string, object>() { { "TargetNhanVien", SelectedNhanVien }, { "IsAddThongTinInCreateNewNhanVienMode", false } },
        new DialogOptions() { ShowTitle = false, Width = "45%", Height = "contain", Resizable = false, Draggable = false, ShowClose = false, Style = "background-color: while; border-radius: 10px; padding: 0px" });

        if (loaiThongTinNVs != null && loaiThongTinNVs.Count > 0)
        {
            int ttnvid = 0; string err = string.Empty;

            foreach (var loaiThongTinNV in loaiThongTinNVs)
            {
                var isexisting = SelectedNhanVien.DSThongTin.Any(thongtin => thongtin.LoaiThongTin.TenTruyXuat.Value?.ToString()?.Trim() == loaiThongTinNV.TenTruyXuat.Value?.ToString()?.Trim());

                if (!isexisting)
                {
                    ThongTinNhanVien thongTin = new()
                        {
                            LoaiTTNVID = { Value = loaiThongTinNV.LoaiTTNVID.Value },
                            NVID = { Value = SelectedNhanVien.NVID.Value },
                            LoaiThongTin = loaiThongTinNV,
                            GiaTri = { Value = loaiThongTinNV.GiaTriMacDinh.Value?? string.Empty }
                        };

                    (ttnvid, err) = SQLServerServices.InsertThongTinNhanVien(thongTin);
                }
            }

            if (ttnvid > 0)
            {
                await LoadAllDanhsachNhanVienBase();

                ReSelectCurrentNhanVien(Common.SelectedNhanVienid);

                ShowNotification("Đã thêm trường thông tin!", NotificationSeverity.Success, 3000);
            }
            else if (ttnvid == -1)
            {
                await DialogService.Alert($"Thêm thông tin lỗi: {err}", "<strong><span style='color: red'>Error!</span></strong>", new AlertOptions() { OkButtonText = "OK", ShowClose = true });
            }
        }

        isEditNhanVienDetail = false;
    }

