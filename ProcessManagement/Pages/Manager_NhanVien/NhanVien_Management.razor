                {
                    List<NhanVien>? dsmaymocFilterResult = DSachNhanViensBase?.FindAll(mm => mm.MaNhanVien.Value?.ToString()?.IndexOf(keysearch, StringComparison.OrdinalIgnoreCase) >= 0);

                    if (dsmaymocFilterResult?.Count == 0)
                    {

                    }

                    DSachNhanViens = dsmaymocFilterResult ?? new();
                }

                isSearching = false;
            }
        });
