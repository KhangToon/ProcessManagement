@page "/mobilemainpage"
@attribute [Authorize(Roles = "User")]

@using ProcessManagement.Pages.MobileDevice.SubmitKQGC
@using Radzen.Blazor
@using Radzen
@using Microsoft.AspNetCore.Components

@inject NotificationService NotificationService
@inject DialogService DialogService
@inject NavigationManager NavigationManager

<RadzenCard Style="width: 100%; height: 100%; overflow: auto" Variant="Variant.Text">
    <RadzenStack Gap="20px" Style="height: 100%; width: 100%; padding: 0px;" Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
        <RadzenButton Icon="search" Text="Truy xuất" Click="NavigateTo_Mobile_TruyXuatPage"
                      ButtonStyle="ButtonStyle.Info" Size="ButtonSize.Medium" Shade="Shade.Darker" Style="background-color: dodgerblue; font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
        <RadzenButton Icon="download" Text="Nhập kho" Click="NavigateTo_Mobile_NhapKhoPage"
                      ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" Shade="Shade.Dark" Style="font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
        <RadzenButton Icon="upload" Text="Xuất kho" Click="NavigateTo_Mobile_XuatKhoPage"
                      ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" Shade="Shade.Dark" Style="font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
        <RadzenButton Icon="contract_edit" Text="Kiểm kho" Click="NavigateTo_Mobile_KiemKePage"
                      ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" Shade="Shade.Dark" Style="font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
        <RadzenButton Icon="add" Text="Kết quả gia công" Click="NavigateTo_Mobile_KQGCPage"
                      ButtonStyle="ButtonStyle.Success" Size="ButtonSize.Medium" Shade="Shade.Dark" Style="font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
    </RadzenStack>
</RadzenCard>

@code {
    private void NavigateTo_Mobile_TruyXuatPage()
    {
        NavigationManager.NavigateTo("/mobile_search");
    }

    private void NavigateTo_Mobile_NhapKhoPage()
    {
        NavigationManager.NavigateTo("/mobiledsphieunk");
    }

    private void NavigateTo_Mobile_XuatKhoPage()
    {
        NavigationManager.NavigateTo("/mobiledsphieuxk");
    }

    private void NavigateTo_Mobile_KiemKePage()
    {
        NavigationManager.NavigateTo("/mobile_kiemke");
    }

    private async Task NavigateTo_Mobile_KQGCPage()
    {
        object newKetQuaGCid = await DialogService.OpenAsync<DialogAddNewKQGC_Mobile>(null, null,
        new DialogOptions() { ShowTitle = false, Width = "100%", Height = "100%", Resizable = false, Draggable = false, ShowClose = false, Style = "background-color: while; border-radius: 0px; padding: 0px; margin: 0px" });
    }
}
