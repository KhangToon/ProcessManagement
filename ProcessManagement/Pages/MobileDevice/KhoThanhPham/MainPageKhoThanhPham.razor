@page "/mobile_khothanhpham"
@attribute [Authorize(Roles = "User")]

@using ProcessManagement.Pages.MobileDevice.KhoThanhPham.NhapKho
@using ProcessManagement.Pages.MobileDevice.KhoThanhPham.XuatKho
@using ProcessManagement.Pages.MobileDevice.SubmitKQGC
@using Radzen.Blazor
@using Radzen
@using Microsoft.AspNetCore.Components

@inject NotificationService NotificationService
@inject DialogService DialogService
@inject NavigationManager NavigationManager

<RadzenCard Style="width: 100%; height: 100%; overflow: auto" Variant="Variant.Text">
    <RadzenStack Gap="20px" Style="height: 100%; width: 100%; padding: 0px;" Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
        <RadzenButton Icon="download" Text="Phiếu nhập hàng" Click="NavigateTo_Mobile_PhieuNhapHangTPham"
                      ButtonStyle="ButtonStyle.Info" Size="ButtonSize.Medium" Shade="Shade.Darker" Style="background-color: dodgerblue; font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
        <RadzenButton Icon="upload" Text="Phiếu xuất hàng" Click="NavigateTo_Mobile_PhieuXuatHangTPham"
                      ButtonStyle="ButtonStyle.Info" Size="ButtonSize.Medium" Shade="Shade.Darker" Style="background-color: dodgerblue; font-size: 16px; height: 50px; width: 200px; border-radius: 5px; --rz-icon-size: 22px;" />
    </RadzenStack>
</RadzenCard>

@code {
    private async Task NavigateTo_Mobile_PhieuNhapHangTPham()
    {
        object newKetQuaGCid = await DialogService.OpenAsync<DialogDSachPNKThanhPham_Mobile>(null, null,
        new DialogOptions() { ShowTitle = false, Width = "100%", Height = "100%", Resizable = false, Draggable = false, ShowClose = false, Style = "background-color: while; border-radius: 0px; padding: 0px; margin: 0px" });
    }

    private async Task NavigateTo_Mobile_PhieuXuatHangTPham()
    {
        object newKetQuaGCid = await DialogService.OpenAsync<DialogDSachPXKThanhPham_Mobile>(null, null,
        new DialogOptions() { ShowTitle = false, Width = "100%", Height = "100%", Resizable = false, Draggable = false, ShowClose = false, Style = "background-color: while; border-radius: 0px; padding: 0px; margin: 0px" });
    }
}
