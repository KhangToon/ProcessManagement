@using System.Security.Claims
@using Radzen
@using Radzen.Blazor

<AuthorizeView>
    <Authorized>
        <UserInfoDisplay User="@context.User" />
    </Authorized>
    <NotAuthorized>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="12px">
            <RadzenLink Path="Identity/Account/Register" Text="Register" />
            <RadzenLink Path="Identity/Account/Login" Text="Login" />
        </RadzenStack>
    </NotAuthorized>
</AuthorizeView>
